{
  "manifest_version": 3,
  "name": "Claude Chat Exporter",
  "version": "1.0.0",
  "description": "Export Claude.ai conversation history as XML+Markdown, pure Markdown, or JSON â€” optimized for re-ingesting into Claude.",
  "permissions": ["activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["https://claude.ai/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://claude.ai/chat/*"],
      "js": ["src/extractor.js"],
      "run_at": "document_idle"
    }
  ]
}
